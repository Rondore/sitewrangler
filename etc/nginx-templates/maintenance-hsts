# Domain   : DOMAINNAMEE
# User     : USERNAMEE
# Template : maintenance-hsts
# Field    : HSTSLENTHH : 31536000
# Field    : HSTSPRELOADD : ; preload

limit_req_zone $binary_remote_addr zone=UNDERDOMAINN:1m rate=15r/m;

server {
    listen LOCALIPP:80 ;
    listen [IPV66]:80 ;

    server_name DOMAINNAMEE www.DOMAINNAMEE;

    root HOMEDIRRpublic_html;

    gzip on;
    etag on;
    gzip_proxied any;
    gzip_comp_level 3;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;
    gzip_vary on;

    modsecurity_rules_file "/opt/sitewrangler/etc/modsec/sites/DOMAINNAMEE";

    rewrite ^/webmail/?$ https://DOMAINNAMEE:2096/ permanent;

    tcp_nodelay off;

    location ~ "^(/\.well-known)" {
        expires 7d;
    }

    location / {
        return 301 https://DOMAINNAMEE$request_uri;
    }
}

server {

    listen LOCALIPP:80;
    listen [IPV66]:80 ;

    server_name webmail.DOMAINNAMEE mail.DOMAINNAMEE;

    location ~ "^/(\.well-known\/|[A-Fa-f0-9]{32}.txt$)" {
        root HOMEDIRRpublic_html;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_pass http://LOCALIPP:8080/;
    }
}

server {

    listen LOCALIPP:443 ssl http2 ;
    listen [IPV66]:443 ssl http2 ;

    server_name DOMAINNAMEE www.DOMAINNAMEE;

    ssl_certificate /etc/letsencrypt/live/DOMAINNAMEE/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/DOMAINNAMEE/privkey.pem;
    add_header Strict-Transport-Security "max-age=HSTSLENTHH; includeSubDomainsHSTSPRELOADD" always;

    root HOMEDIRRpublic_html;

    gzip on;
    etag on;
    gzip_proxied any;
    gzip_comp_level 3;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;
    gzip_vary on;

    modsecurity_rules_file "/opt/sitewrangler/etc/modsec/sites/DOMAINNAMEE";
    index index.html index.htm index.php;

    rewrite ^/webmail/?$ https://DOMAINNAMEE:2096/ permanent;

    tcp_nodelay off;
    client_max_body_size 128M;

    location / {
        return 503;
    }
}

server {

    listen LOCALIPP:443 ssl http2;
    listen [IPV66]:443 ssl http2 ;

    server_name webmail.DOMAINNAMEE mail.DOMAINNAMEE;

    ssl_certificate /etc/letsencrypt/live/DOMAINNAMEE/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/DOMAINNAMEE/privkey.pem;
    add_header Strict-Transport-Security "max-age=HSTSLENTHH; includeSubDomainsHSTSPRELOADD" always;

    location ~ "^/(\.well-known\/|[A-Fa-f0-9]{32}.txt$)" {
        root HOMEDIRRpublic_html;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_ssl_verify off;
        proxy_ssl_session_reuse off;
        proxy_ssl_name $http_host;
        proxy_ssl_server_name on;
        proxy_set_header X-HTTPS 1;
        proxy_pass http://LOCALIPP:8080/;
    }
}
